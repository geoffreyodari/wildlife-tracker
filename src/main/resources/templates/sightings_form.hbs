{{#partial "content"}}
<section class="row p-3 d-flex align-items-center h-100">
    <div class="col-lg-4 col-sm-12 mx-auto">
        <h5 class=" display-6">Record Sighting</h5>
        <form method="post" action="/new_sighting" class="row g-3 needs-validation">
        <div class="mb-3">
            <label for="" class="form-label">id</label>
            <input type="text" name="id" id="" value="{{id}}" class="form-control" locked>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Name</label>
            <input type="text" name="name" id="" value="{{name}}" class="form-control" locked>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Sighting: Location</label>
            <input type="text" name="location" id="" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3 text-center">
            <input type="submit" value="Submit" class="btn btn-wildlife">
        </div>
        </form>
    </div> 
</section>
{{/partial}}
{{> layout.hbs}}