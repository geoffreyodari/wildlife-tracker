{{#partial "content"}}
  <section class="row lists-padding">
    <div class="col-8 mx-auto">
      <h5 class="display-6">Sightings</h5>
        {{#if name}}
            <p class="lead">{{name}}</p>
            <p class="lead">{{id}}</p>
        {{/if}}

      <table class="table">
        <thead>
          <tr>
            <th>id</th>
            <th>Name</th>
            <th>Location</th>
            <th>Timestamp</th>
            <th>Recorded by</th>
          </tr>
        </thead>
        <tbody>
          {{#each sighting}}
          <tr>
            <td>{{animalid}}</td>
            <td>{{name}}</td>
            <td>{{location}}</td>
            <td>{{timespotted}}</td>
            <td>{{rangername}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div> 
</section>
{{/partial}}
{{> layout.hbs}}